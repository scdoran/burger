<h1>Make a Burger, Eat a Burger.</h1>

<h2>Burgers to Eat</h2>

<ul>
	{{#each burger}}
		{{#unless this.devoured}}
		<li>
			{{this.burger_name}}

			<form action="/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="devoured" value="true">
				<button type="submit">EAT ME!</button>
			</form>
			{{> burger/delete-burger}}
		</li>
		{{/unless}}
	{{/each}}
</ul>

<h2>RIP Burgers</h2>

<ul>
	{{#each burger}}
		{{#if this.devoured}}
		<li>
			{{this.burger_name}}

			<form action="/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="devoured" value="false">
				<button type="submit">BRING IT BACK!</button>
			</form>

			{{> burger/delete-burger}}
		</li>
		{{/if}}
	{{/each}}
</ul>

<h2>Add a Burger!</h2>

<form class="create-update-form" action="/" method="POST">
	
	<div class="form-group">
		<label>Burger Name:</label>
		<input type="text" name="burger_name">
	</div>

	<!-- <div class="form-group">
		<label></label>
	</div> -->

	<button type="submit">Add Burger</button>
</form>